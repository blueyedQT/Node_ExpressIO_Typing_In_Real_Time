<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script>
    	$(document).ready(function (){
        var user_name = prompt('What is your name?');
		    io = io.connect();
        io.emit('got_new_user', {name: user_name});
        io.on('exisiting_users', function (data){
          for(var i=0; i<data.length; i++){
            $('#content').append(
                '<div class="user '+data[i].count+'">'+
                  '<h2>'+data[i].name+'</h2>'+
                '</div>');
          }
        });
  			io.on('new_user', function (data){
          $('#content').append(
              '<div class="user '+data.count+'">'+
                '<h2>'+data.name+'</h2>'+
              '</div>');
        });
        io.on('disconnect_user', function (data) {
          $("div."+data).fadeOut();
          $('body').append('<p>A user has left</p>');
        });

        // $('#'+data).mouseenter(function(){
        //   alert('You hovered over me!');
        // });

		})
    </script>
  </head>
  <body>
    <h1><%= title %></h1>
    <div id="content"></div>
  </body>
</html>
